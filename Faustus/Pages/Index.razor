@page "/"
<div class="bg-gray-200 w-screen h-screen">
    <div class="flex flex-col md:flex-row px-8">
        <div class="flex-initial p-4 w-80">
            <BFUTextField Label="Price Note" ReadOnly="true"
                          @bind-value="_priceNote" />
        </div>
        <div class="flex-initial p-4 md:self-end w-60">
            <BlazorFluentUI.BFUDefaultButton @onclick="CopyPriceNote">
                Copy to Clipboard
            </BlazorFluentUI.BFUDefaultButton>
        </div>
    </div>

    <div class="flex px-8">
        <div class="flex-initial p-4 w-40">
            <BFUTextField Label="Amount They Get" @bind-value="_stackSize" />
        </div>
        <div class="flex-initial p-4 w-40">
            <BFUTextField Label="Amount I Want" @bind-value="_cost" />
        </div>
    </div>

    <hr />
    <p>
        What I Want
    </p>

    <div class="px-8 bg-black w-auto h-auto ">
        <BFUActionButton OnClick=@(() => UpdateCurrency("chaos"))>
            <img class="w-10 h-10 p-1 hover:bg-gray-600"
                 src="https://web.poecdn.com/image/Art/2DItems/Currency/CurrencyRerollRare.png" />
        </BFUActionButton>
        <BFUActionButton OnClick=@(() => UpdateCurrency("alch"))>
            <img class="w-10 h-10 p-1 hover:bg-gray-600"
                 src="https://web.poecdn.com/image/Art/2DItems/Currency/CurrencyUpgradeToRare.png" />
        </BFUActionButton>
        <BFUActionButton OnClick=@(() => UpdateCurrency("exalted"))>
            <img class="w-10 h-10 p-1 hover:bg-gray-600"
                 src="https://web.poecdn.com/image/Art/2DItems/Currency/CurrencyAddModToRare.png" />
        </BFUActionButton>
    </div>
</div>